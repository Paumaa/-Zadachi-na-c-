using System; //основа программы,при помощи этой строки можно указать класс

public class Program {//объявим класс

  public static void Main(string[] args) {//Массив аргументов, который передается приложению операционной системой
    int x = Convert.ToInt32(Console.ReadLine());//вводим переменную типа int(целое) с клавиатуры
    if (x<0) {//ставим условие меньше ли x 0
      // число отрицательное
      Console.WriteLine("<0");//Если условие верно, то выводим
    }
    if (x>0){// ставим условие больше ли x 0
      // число положительное
      Console.WriteLine(">0");//если условие верно, то выводим
    }
    else // если вышеуказанные условия не верны, то включается этот блок "иначе"
    // равно 0
    Console.WriteLine("0");//если условие верно, то выводим
  }
}
